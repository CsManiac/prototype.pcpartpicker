<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/jesus"
                android:id="@+id/cpu_image"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/cpu_image"
                android:text=""
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentTop="true"
                android:id="@+id/cpu_name"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cpu_name"
                android:layout_toRightOf="@+id/cpu_image"
                android:text=""
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:id="@+id/cpu_clockspeed"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cpu_clockspeed"
                android:layout_toRightOf="@+id/cpu_image"
                android:text=""
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:id="@+id/cpu_cores"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/cpu_cores"
                android:layout_toRightOf="@+id/cpu_image"
                android:text=""
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:id="@+id/cpu_tdp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/cpu_tdp"
                android:layout_toRightOf="@+id/cpu_image"
                android:text=""
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:id="@+id/cpu_price"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>